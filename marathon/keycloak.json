{
  "id": "keycloak",
  "cmd": null,
  "args": [],
  "networks": [
    {
      "mode": "container",
      "name": "springboot-mesos-marathon-keycloak-openldap_default"
    }
  ],
  "container": {
    "type": "DOCKER",
    "docker": {
      "image": "jboss/keycloak:10.0.2"
    },
    "portMappings": [
      {
        "containerPort": 8080,
        "hostPort": 0
      }
    ]
  },
  "cpus": 0.2,
  "mem": 1024,
  "instances": 1,
  "env": {
    "KEYCLOAK_USER": "admin",
    "KEYCLOAK_PASSWORD": "admin",
    "DB_VENDOR": "mysql",
    "DB_ADDR": "mysql-keycloak",
    "DB_USER": "keycloak",
    "DB_PASSWORD": "password",
    "JDBC_PARAMS": "useSSL=false"
  },
  "healthChecks": [
    {
      "protocol": "HTTP",
      "port": 8080,
      "path": "/auth",
      "maxConsecutiveFailures": 5,
      "gracePeriodSeconds": 300,
      "intervalSeconds": 60
    }
  ]
}